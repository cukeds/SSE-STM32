#ifndef BSP_RF
#define BSP_RF

#include "nrf24l01p.h"

typedef enum {
	NONE = 0,
	TX,
	RX
} BSP_RF_MODE_TypeDef;


class BSP_RF_PARAMS_TypeDef{
public:
	air_data_rate rate;
	channel channel;
private:
	BSP_RF_MODE_TypeDef mode = NONE;
};


void BSP_RF_Init(BSP_RF_PARAMS_TypeDef);
void BSP_RF_SendMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
void BSP_RF_ReceiveMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);


#endif
