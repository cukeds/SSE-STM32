#ifndef BSP_RF_H
#define BSP_RF_H

#include <nrf24l01p_b.h>

typedef enum class{
    NONE = 0,
    TX,
    RX,
	STANDBY
} BSP_RF_MODE_TypeDef;

typedef struct {
    air_data_rate rate;
    channel channel;
} BSP_RF_Params_TypeDef;


void BSP_RF_Init(BSP_RF_Params_TypeDef*);
void BSP_RF_SendMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
void BSP_RF_Listening();
void BSP_RF_IrqHandler(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
BSP_RF_MODE_TypeDef BSP_RF_GetMode();

#endif
