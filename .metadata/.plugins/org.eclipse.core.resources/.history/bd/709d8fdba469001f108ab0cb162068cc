#ifndef BSP_RF
#define BSP_RF

#include "nrf24l01p.h"

namespace BSP_RF{

	typedef enum class {
		NONE = 0,
		TX,
		RX
	} BSP_RF_MODE_TypeDef;


	class BSP_RF_TypeDef
	{
	public:
		BSP_RF_TypeDef(air_data_rate _rate, channel _channel);
		void BSP_RF_SendMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
		void BSP_RF_ReceiveMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
	private:
		air_data_rate rate;
		channel channel;
		BSP_RF_MODE_TypeDef mode = NONE;
	};

}
#endif
