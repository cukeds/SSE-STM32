#ifndef BSP_RF_H
#define BSP_RF_H

#include "nrf24l01p.h"

typedef enum class{
    NONE = 0,
    TX,
    RX
} BSP_RF_MODE_TypeDef;

typedef struct {
    air_data_rate rate;
    channel channel;
} BSP_RF_Params_TypeDef;


void BSP_RF_Init(BSP_RF_Params_TypeDef*);
void BSP_RF_SendMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
void BSP_RF_ReceiveMessage(uint8_t payload[NRF24L01P_PAYLOAD_LENGTH]);
void BSP_RF_TxInterrupt();

#endif
